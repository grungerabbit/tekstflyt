<div class='non-header-page'>
	<h3>Wordcount Mode</h3>
	<ul>
	{% for flow in wordcount_flows %}
            <li><a href="/w/{{flow.writer_name}}/f/{{flow.number}}">{{flow.title}}</a> — {{flow.modescore}} points per word — {{flow.score}} total points — <a href="/w/{{flow.writer_name}}">{{flow.writer_name}}</a></li>
	{% endfor %}

	{% if wordcount_flows.size < 1 %}
	<p>No highscores on the board. Get writing!</p>
	{% endif %}
	</ul>
	<h3>Timer Mode</h3>
	<ul>
	{% for flow in timer_flows %}
            <li><a href="/w/{{flow.writer_name}}/f/{{flow.number}}">{{flow.title}}</a> — {{flow.modescore}} points per second — {{flow.score}} total score — <a href="/w/{{flow.writer_name}}">{{flow.writer_name}}</a></li>
	{% endfor %}

	{% if timer_flows.size < 1 %}
	<p>No highscores on the board. Get writing!</p>
	{% endif %}
	</ul>
</div>
